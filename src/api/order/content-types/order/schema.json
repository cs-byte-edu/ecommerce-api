{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "processing",
        "shipped",
        "delivered",
        "cancelled",
        "refunded"
      ],
      "default": "pending",
      "required": true
    },
    "totalAmount": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "subtotal": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "taxAmount": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "shippingAmount": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "discountAmount": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "currency": {
      "type": "string",
      "default": "UAH",
      "required": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "failed",
        "refunded",
        "partially_refunded"
      ],
      "default": "pending"
    },
    "paymentMethod": {
      "type": "string"
    },
    "shippingAddress": {
      "type": "json"
    },
    "billingAddress": {
      "type": "json"
    },
    "customerInfo": {
      "type": "json"
    },
    "customerEmail": {
      "type": "email",
      "required": true
    },
    "customerPhone": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "orderDate": {
      "type": "datetime",
      "required": true
    },
    "shippedDate": {
      "type": "datetime"
    },
    "deliveredDate": {
      "type": "datetime"
    },
    "trackingNumber": {
      "type": "string"
    },
    "orderItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "user_account": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    }
  }
}