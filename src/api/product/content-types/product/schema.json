{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "sku": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "productType": {
      "type": "enumeration",
      "enum": [
        "simple",
        "bundle",
        "kit"
      ],
      "default": "simple",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "inStock": {
      "type": "boolean",
      "default": true
    },
    "stockQuantity": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "weight": {
      "type": "decimal",
      "min": 0
    },
    "isBundle": {
      "type": "boolean",
      "default": false
    },
    "bundleProducts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "orderItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "product"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "products"
    },
    "primary_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "brand": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::brand.brand"
    },
    "product_discount": {
      "type": "decimal"
    }
  }
}
