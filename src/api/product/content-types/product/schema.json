{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "description": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "sku": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "product_type": {
      "type": "enumeration",
      "required": true,
      "default": "simple",
      "enum": [
        "simple",
        "bundle",
        "kit"
      ]
    },
    "price_variables": {
      "type": "json",
      "required": true
    },
    "product_discount": {
      "type": "decimal"
    },
    "final_price": {
      "type": "decimal"
    },
    "product_attributes": {
      "type": "component",
      "component": "product.attribute",
      "repeatable": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "stock_quantity": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "primary_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "cart_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cart-item.cart-item",
      "mappedBy": "product"
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "product"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "products"
    },
    "price_formula": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::price-formula.price-formula"
    },
    "bundle": {
      "type": "component",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "product_type"
            },
            "bundle"
          ]
        }
      },
      "component": "product.product-set",
      "repeatable": true
    },
    "brand": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::brand.brand"
    }
  }
}
